rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    // For production, maintain a separate admins collection
    // or use Firebase Custom Claims
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email != null;
    }
    
    // Items collection - Public read, Admin write
    match /items/{itemId} {
      // Anyone can read items (for public website)
      allow read: if true;
      
      // Only authenticated admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // Categories collection (if used)
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Stats collection (if used)
    match /stats/{statId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Admin users collection (optional - for managing multiple admins)
    match /admins/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
